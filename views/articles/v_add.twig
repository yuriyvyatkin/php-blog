<form class="form-group" method="POST">
  <label for="title">Title:</label>
  <input class="form-control" id="title" type="text" name="title" value="{{ fields.title ?? '' }}">
  </br>
  <label for="content">Content:</label>
  <textarea class="form-control" id="content" wrap="hard" type="text" name="content" rows="10" cols="50">{{ fields.content ?? '' }}</textarea>
  </br>
  <label for="category">Choose a category (categories in alphabetical order):</label>
  <select class="form-control" id="category" name="id_category">
    {% for category in categories %}
      <option value={{ category.id_category }}>
        {{ category.title }}
      </option>
    {% endfor %}
  </select>
  </br>
  {% if error %}
    <p class="bg-warning center text-center mb-4">{{ error }}</p>
  {% endif %}
  <input class="btn btn-primary" type="submit" value="Add">
  </br>
</form>
<hr>
<a class="btn btn-outline-dark" href="{{ BASE_URL }}">Move to the main page</a>
